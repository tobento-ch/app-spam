{
    "name": "tobento/app-spam",
    "type": "library",
    "description": "App spam protection.",
    "keywords": [
        "tobento",
        "package",
        "app",
        "spam",
        "antispam"
	],
    "homepage": "https://www.tobento.ch",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Strub",
            "email": "info@tobento.ch",
            "homepage": "https://www.tobento.ch"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "psr/container": "^2.0",
        "tobento/app": "^1.0.7",
        "tobento/app-migration": "^1.0",
        "tobento/app-http": "^1.0 || ^1.1",
        "tobento/app-view": "^1.0",
        "tobento/app-encryption": "^1.0",
        "tobento/service-autowire": "^1.0"
    },
    "suggest": {
        "tobento/app-validation": "To support detecting spam using the validator"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.0",
        "tobento/app-event": "^1.0.1",
        "tobento/app-testing": "^1.0",
        "tobento/app-validation": "^1.0",
        "tobento/service-filesystem": "^1.0.5"
    },
    "autoload": {
        "psr-4": {
            "Tobento\\App\\Spam\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tobento\\App\\Spam\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "psalm": "vendor/bin/psalm"
    }
}